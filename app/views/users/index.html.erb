<div class="row">
  <div class="twelve columns">
    <h1>Users</h1>

    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.email, user %></td>
            <td>
              <%= link_to 'Edit', edit_user_path(user) %>
              <%= link_to 'Delete', user_path(user), :method => 'delete', :confirm => 'Are you sure?' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New User', new_user_path %>
  </div>

</div>