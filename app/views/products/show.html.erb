<% unless @product.supply_items.empty? && @product.accessories.empty? %>
  <div class="row" id='accessories'>
    <div class="twelve columns"><h3 class="title">Accessories <small class="subheader">Additional Compatible Equipment</small></h3></div>
    <div class="six columns">
      <table class="accessories"> 
        <tbody>
          <tr>
            <td><h4>Accessories</h4></td>
          </tr>
          <% @product.accessories.each do |accessory| %>
          <tr>
            <td><b><%= accessory.name %></b></td>
            <td><%= accessory.description %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="six columns">
      <table class="supplies"> 
        <tbody>
        	<tr>
          	<td><h4>Supply Items</h4></td>
          </tr>
			    <% @product.supply_items.each do |supply_item| %>
          <tr>
            <td><b><%= supply_item.name %></b></td>
            <td><%= supply_item.description %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
<% unless @product.downloads.empty? %>
  <div class="row" id='downloads'>
    <div class="twelve columns"><h3 class="title">Downloads <small class="subheader">Downloadable Brochures and Drivers</small></h3></div>
    <div class="twelve columns downloads">
      <ul> 
        <% for download in @product.downloads %>
          <% if download.download %>
            <li><%= link_to "<i class='general foundicon-page'></i> #{download.name}".html_safe, download.download_url %>
            </li>
          <% end %>
        <% end %>
      </ul>
