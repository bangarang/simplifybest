<% provide(:title, @product.name) %>
  <div class="prod-nav row">
    <div class="four columns">
      <h1 class="title"><%= @product.name %></h1>
    </div>
    <div class="eight columns">
      <ul class="right">
        <li><a href="#overview">Overview</a></li>
        <% unless @product.product_pictures.empty? %><li><a href="#gallery">Gallery</a></li><% end %>
        <% if @specs %><li><a href="#specifications">Specifications</a></li><% end %>
        <% unless @product.supply_items.empty? && @product.accessories.empty? %><li><a href="#accessories">Accessories</a></li><% end %>
        <% unless @product.downloads.empty? %><li><a href="#downloads">Downloads</a></li><% end %>
      </ul>
    </div>
  </div>
  <div class="bread row">
    <div class="six columns">
      <ul class="breadcrumbs">
        <li><%= link_to "Home", root_url %></li>
        <li><%= link_to "Products", products_url %></li>
        <li><%= link_to @product.category.name, category_path(@product.category) %></li>
        <li class="current"><%= link_to @product.name, @product %></li>
      </ul>
    </div>
      <% if can? :edit, @product %>
      <div class="six columns">
        <ul class="right prod-edit">
          <li><%= link_to "<i class='icon-edit'></i> Edit".html_safe, edit_product_path(@product)%></li>
          <li><%= link_to "<i class='icon-trash'></i> Delete Product".html_safe, @product, :confirm => 'Are you sure?', :method => :delete %></li>
          <li><a href="<%=@product.slug%>/dup"><i class='icon-copy'></i> Duplicate Product</a></li>
        </ul>
      </div>
      <% end %>
  </div>
  <div class="row" id="overview"> 
    <div class="twelve columns">
      <h3 class="title">Overview <small class="subheader">General Description of the <%= @product.name %></small></h3>
    </div>
    <div class="six columns mainimage">
        <%= image_tag @product.image_url(:main).to_s if @product.image? %>
      </div>
    <div class="six columns">
      <h4 class="subheader"><%= @product.excerpt %></h4>
      <%= @product.description.html_safe %>
    </div>
  </div>

<% unless @product.product_pictures.empty? %>
  <div class="row" id="gallery">
    <div class="twelve columns"><h3 class="title">Gallery <small class="subheader">View the Photo Gallery</small></h3></div>
    <div class="twelve columns"> 
      <ul class='block-grid eight-up mobile-three-up' data-clearing>
        <% for product_picture in @product.product_pictures %>
          <% if product_picture.picture %>
            <li><img data-caption="<%= product_picture.name %>" src="<%= product_picture.picture_url %>" ></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

