<% provide(:title, @product.name) %>


<div class="wrapper"></div>
<div class="row title homepage">
  <h1 class="right"><%= @product.name %></h1>
</div>
 <div class="row title homepage">
  <h3 class="subheader right"><%= @product.excerpt %></h3>
</div>

<div class="row">
  <div class="six columns">
    <%= @product.category.name %>
  </div>
	<div class="six columns right">
	  <%= link_to "Edit", edit_product_path(@product) %> |
	  <%= link_to "Delete Product", @product, :confirm => 'Are you sure?', :method => :delete %>
	</div>
</div>

<div class="box">
  <div class="row prodnav">
    <div class="twelve columns">
      <dl class="sub-nav right">
        <dt><%= @product.name %> Navigation:</dt>
        <dd><a href="#overview">Overview</a></dd>
        <dd><a href="#gallery">Gallery</a></dd>
        <dd><a href="#specifications">Specifications</a></dd>
        <dd><a href="#accessories">Accessories</a></dd>
        <dd><a href="#downloads">Downloads</a></dd>
      </dl>
    </div>
  </div>


  <div class="row" id="overview"> 
    <div class="twelve columns">
      <h3 class="title right">Overview</h3>
    </div>
    <div class="four columns mainimage">
        <%= image_tag @product.image_url(:main).to_s if @product.image? %>
      </div>
    <div class="eight columns">
      <%= @product.description.html_safe %>
    </div>
  </div>

  <div class="row" id="gallery">
    <div class="twelve columns"><h3 class="title right">Gallery</h3></div>
    <div class="twelve columns"> 
      <ul class='block-grid eight-up mobile-three-up' data-clearing>
        <% for product_picture in @product.product_pictures %>
          <% if product_picture.picture %>
            <li><img data-caption="<%= product_picture.name %>" src="<%= product_picture.picture_url %>" ></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

    <div class="row" id='specifications'>
    <div class="twelve columns"><h3 class="title right">Specifications</h3></div>
    <div class="twelve columns specs">
      <dl class="tabs four-up">
        <dd class="active"><a href="#general">General Specifications</a></dd>
        <dd><a href="#papersupply">Paper Supply</a></dd>
        <dd><a href="#print">Print Specifications</a></dd>
        <dd><a href="#scan">Scan Specifications</a></dd>
      </dl>
      <ul class="tabs-content">
        <li class="active" id="generalTab">
            <table style="width: 100%;"> 
              <tbody>
                <tr>
                  <td><b>Configuration</b></td>
                  <td><%= @product.configuration %></td>
                </tr>
                <tr>
                  <td><b>Speed</b></td>
                  <td><%= @product.speed %></td>
                </tr>
                <tr>
                  <td><b>Warm-up Time</b></td>
                  <td><%= @product.warmup %></td>
                </tr>
                <tr>
