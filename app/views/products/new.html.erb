<% provide(:title, "New Product!") %>
<%= form_for @product, :html => {:multipart => true} do |f| %>

<div class="wrapper"></div>
<div class="row title homepage">
  <h1 class="right"><%= f.text_field :name, :placeholder => "Product Name" %></h1>
</div>
 <div class="row title homepage">
  <h3 class="subheader right"><%= f.text_field :excerpt, :placeholder => "Product Excerpt" %></h3>
</div>

<div class="row">
  <div class="right">
    <%= link_to "Show", @product %> |
    <%= link_to "View All", products_path %>
  </div>
</div>

<div class="box">
  <div class="row prodnav">
    <div class="twelve columns">
      <dl class="sub-nav right">
        <dt><%= @product.name %> Navigation:</dt>
        <dd><a href="#overview">Overview</a></dd>
        <dd><a href="#gallery">Gallery</a></dd>
        <dd><a href="#specifications">Specifications</a></dd>
        <dd><a href="#accessories">Accessories</a></dd>
        <dd><a href="#downloads">Downloads</a></dd>
      </dl>
    </div>
  </div>


  <div class="row" id="overview">
    <!-- <div class="twelve columns"><h3 class="title right">Overview</h3></div> -->
    <div class="twelve columns">
      <h3 class="title right">Overview</h3>
    </div>
    <div class="four columns mainimage">
      <%= f.file_field :image %><br />
      or
      <%= f.text_field :remote_image_url, :placeholder => 'Image URL' %>
    </div>
    <div class="eight columns">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="row" id="gallery">
    <div class="twelve columns"><h3 class="title right">Gallery</h3></div>
    <div class="twelve columns"> 
      <ul class='block-grid eight-up mobile-three-up' data-clearing>

      </ul>
    </div>
  </div>

