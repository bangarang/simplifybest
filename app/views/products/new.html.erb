      </table>
    </div>
  </div>

  <div class="row" id='downloads'>
    <div class="twelve columns"><h3 class="title right">Downloads</h3></div>
    <div class="twelve columns">
      <table style="width: 100%;"> 
        <tbody>
            <tr>
                <td><b>Spec Title</b></td>
                <td>Spec Data</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="two columns centered">
      <%= f.submit :class => "medium radius button"%>
    </div>
  </div>
  <br/>
