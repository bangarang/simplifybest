<% provide(:title, 'Products') %>

<div class="product-placeholder">
  <div class="row">
    <div class="twelve columns title prodnav">
      <h1>Our Products</h1>
    </div>
  </div>
  <div class="row prod-admin">
    <% if can? :edit, Product %>
    <div class="twelve columns">
       <div href="#" class="small alert button split dropdown">
          <a href="/products/new">New Product</a>
            <span></span>
          <ul>
            <li><label>Copy Current:</label></li>
            <li class="divider"></li>
            <% for product in @products %>
            <li><a href="/products/<%= product.slug %>/dup"><%= product.name %></a></li>
            <% end %>
          </ul>
        </div>
    </div>
    <% end %>
  </div>
</div>

<div class="box product-content">
  <% for category in @categories %>
  <div class="row">
    <div class="twelve columns"><h3 class="title"><%= category.name %></h3></div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <ul class="block-grid four-up mobile index">
      <% for product in category.products.order(:name) %>
        <li>
          <a href="<%= product_path(product) %>">
            <ul class="pricing-table box product">
              <li class="thumbnail"><%= image_tag product.image_url(:thumb).to_s if product.image? %></li>
              <li class="title"><%= product.name %></li>
              <li class="description"><%= product.excerpt %></li>
              <li class="bullet-item"><%= product.maxdutycycle %></li>
              <li class="cta-button"><a class="small button" href="<%= product_path(product) %>">More Info&raquo;</a></li>
            </ul>
          </a>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
  <% end %>
</div>
