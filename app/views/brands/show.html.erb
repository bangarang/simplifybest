<% provide(:title, "#{@brand.name} Products".html_safe) %>

<div class="row">
  <div class="twelve columns">
    <h1><%= @brand.name %>  <small class="subheader"><%= @brand.description %></small></h1>
  </div>
</div>
<div class="bread row">
  <div class="twelve columns">
    <ul class="breadcrumbs">
      <li><%= link_to "Home", root_url %></li>
      <li><%= link_to "Products", products_url %></li>
      <li class="current"><%= link_to @brand.name, brand_path(@brand) %></li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="twelve columns">
    <ul class="block-grid four-up mobile-two-up">
    <% for product in @brand.products.order(:name) %>
      <li>
        <ul class="pricing-table box product">
          <li class="thumbnail"><%= image_tag product.image_url(:thumb).to_s if product.image? %></li>
          <li class="title"><%= link_to product.name, product %></li>
          <li class="description"><%= product.excerpt %></li>
          <li class="bullet-item"><%= product.maxdutycycle %></li>
          <li class="cta-button"><a class="small button" href="<%= product_path(product) %>">More Info &raquo;</a></li>
        </ul>
      </li>
    <% end %>
    </ul>
  </div>
</div>

<%= javascript_tag do %>
  mixpanel.track('<%= @brand.name %>');
<% end %>
