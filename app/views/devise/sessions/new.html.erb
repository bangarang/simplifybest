<div class="row signin">
	<div class="six columns centered">
		<h2>Sign in</h2>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<div class="row">
			  <div class="two columns">
			  	<%= f.label :email, :class => "right inline"  %>
			  </div>
			  <div class="ten columns">
			  	<%= f.email_field :email, :placeholder => "me@example.com" %>
			  </div>
			</div>
			<div class="row">
			  <div class="two columns">
			  	<%= f.label :password, :class => "right inline" %>
			  </div>
			  <div class="ten columns">
			  	<%= f.password_field :password, :placeholder => "your password" %>
			  </div>
			</div>

			<% if devise_mapping.rememberable? -%>
			<div class="row">
			  <div class="three columns offset-by-two">
			  	<%= f.label :remember_me %>
			  </div>
			  <div class="seven columns">
			  	<%= f.check_box :remember_me %>
			  </div>
			</div>
			<% end -%>

		  	<div><%= f.submit "Sign in", :class => 'small button right' %></div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>