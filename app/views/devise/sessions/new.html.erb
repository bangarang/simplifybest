<% provide(:title, 'Login') %>
<div class="row">
	<div class="large-6 columns large-centered box">
		<h2 class="title">Sign in</h2>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<div class="row">
			  <div class="large-2 columns">
			  	<%= f.label :email, :class => "right inline"  %>
			  </div>
			  <div class="large-10 columns">
			  	<%= f.email_field :email, :placeholder => "me@example.com" %>
			  </div>
			</div>
			<div class="row">
			  <div class="large-2 columns">
			  	<%= f.label :password, :class => "right inline" %>
			  </div>
			  <div class="large-10 columns">
			  	<%= f.password_field :password, :placeholder => "your password" %>
			  </div>
			</div>

			<% if devise_mapping.rememberable? -%>
			<div class="row">
			  <div class="large-3 columns offset-by-2">
			  	<%= f.label :remember_me %>
			  </div>
			  <div class="large-7 columns">
			  	<%= f.check_box :remember_me %>
			  </div>
			</div>
			<% end -%>

		  	<div><%= f.submit "Sign in", :class => 'small button ticket' %></div>
		<% end %>
		<% render "devise/shared/links" %>
	</div>
</div>