<%= form_for @quote, :validate => true do |f| %>
 <div class="row">
    <div class="two columns">
      <%= f.label "Name:", :class => "right inline" %>
    </div>
    <div class="five columns">
      <%= f.text_field :first, :placeholder => "First" %>
    </div>
    <div class="five columns">
      <%= f.text_field :last, :placeholder => "Last" %>
    </div>
  </div>
  <div class="row">
    <div class="two columns">
      <%= f.label "Company:", :class => "right inline" %>
    </div>
    <div class="ten columns">
      <%= f.text_field :company, :placeholder => "My Company, LLC." %>
    </div>
  </div> 
  <div class="row">
    <div class="two columns">
      <%= f.label "Phone:", :class => "right inline" %>
    </div>
    <div class="ten columns">
      <%= f.text_field :phone_number, :placeholder => "(111) 123-4567" %>
    </div>
  </div> 
  <div class="row">
    <div class="two columns">
      <%= f.label "E-Mail:", :class => "right inline" %>
    </div>
    <div class="ten columns">
      <%= f.text_field :address, :placeholder => "me@mycompany.com" %>
    </div>
  </div>
  <div class="row">
    <div class="two columns">
      <%= f.label "Details", "Details:", :class => "right inline" %>
    </div>
    <div class="ten columns">
      <%= f.text_area :comment, :placeholder => "What are you looking for?", :rows => "5" %>
    </div>
  </div>
  <div class="row">
    <div class="two columns centered">
      <%= f.submit "Submit", :class => "success button" %>
    </div>
  </div>
<% end %>
