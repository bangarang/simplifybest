<%= form_for @service_call, :validate => true do |f| %>
  <div class="row">
    <div class="large-2 columns">
      <%= f.label "Name:", :class => "right inline" %>
    </div>
    <div class="large-5 columns">
      <%= f.text_field :first, :placeholder => "First" %>
    </div>
    <div class="large-5 columns">
      <%= f.text_field :last, :placeholder => "Last" %>
    </div>
  </div>
  <div class="row">
    <div class="large-2 columns">
      <%= f.label "Company:", :class => "right inline" %>
    </div>
    <div class="large-10 columns">
      <%= f.text_field :company, :placeholder => "My Company, LLC." %>
    </div>
  </div> 
  <div class="row">
    <div class="large-2 columns">
      <%= f.label "Phone:", :class => "right inline" %>
    </div>
    <div class="large-10 columns">
      <%= f.text_field :phone_number, :placeholder => "(111) 123-4567" %>
    </div>
  </div> 
  <div class="row">
    <div class="large-2 columns">
      <%= f.label "E-Mail:", :class => "right inline" %>
    </div>
    <div class="large-10 columns">
      <%= f.text_field :address, :placeholder => "me@mycompany.com" %>
    </div>
  </div>
  <div class="row">
    <div class="large-2 columns">
      <%= f.label "SOS#:", :class => "right inline" %>
    </div>
    <div class="large-10 columns">
      <div class="row collapse">
        <div class="large-2 mobile-one columns">
          <span class="prefix">SOS</span>
        </div>
        <div class="large-10 mobile-three columns">
          <%= f.text_field :sos, :placeholder => "1234" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-2 columns">
      <%= f.label "Service Call:", :class => "right inline" %>
    </div>
    <div class="large-10 columns">
      <%= f.text_area :comment, :placeholder => "Describe the problem with the machine. Tell us anything that you think might help!", :rows => "5" %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.submit "Submit", :class => "small button ticket" %>
    </div>
  </div>
<% end %>
