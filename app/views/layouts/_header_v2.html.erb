<div class="rbar-container">
  <div class="row rbar">
    <div class="two mobile-two columns">
      <a href="<%= root_url %>"><%= image_tag("logo.t.png", :class => "logo") %></a>
    </div>
    <div class="ten mobile-two columns">
      <div class="top twelve columns">
        <ul class="top right<% if user_signed_in?%> in<% end %>">
          <% if user_signed_in? %>
          <li style="color:white;">Signed in as: <%= current_user.email %></li>
          <li ><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :confirm => 'Are you sure?' %></li>
          <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <% end %>
        </ul> 
      </div>
      <div  class="bottom twelve columns">
        <ul>
          <li><%= link_to'Meet Simplified', about_path %></li>
          <li class="has-dropdown">
            <% if can? :edit, Message %>
            <%= link_to 'Service', messages_url %>
            <% else %>
            <a href="#">Service</a>
            <% end %>
          </li>
          <li class="product-button">
            <%= link_to "Our Products", products_path %>
          </li>
        </ul> 
      </div>
    </div>
  </div>
</div>


<div class="row scontainer">
  <div class="twelve columns pcontainer">
    <% for category in @categories %>
    <ul class="<%= category.slug%>" style="float:left;">
      <li><label><%= category.name %></label></li>
      <% for product in category.products %> 
      <li><%= link_to product.name, product %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>