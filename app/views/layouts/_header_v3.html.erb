<div class="rbar-container <% if user_signed_in?%> in<% end %>">
  <div class="row rbar">
    <div class="three left mainpic hide-for-small">
      <a href="<%= root_url %>"><%= image_tag("logo.250.png", :class => "logo") %></a>
    </div>
    <div class="nine columns">
      <div class="top twelve">
        <ul class="top right<% if user_signed_in?%> in<% end %>">
          <% if user_signed_in? %>
          <li class="user">Signed in as: <%= link_to current_user.email, current_user %></li>
          <li ><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :confirm => 'Are you sure?' %></li>
          <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <% end %>
        </ul> 
      </div>
      <a class="show-for-small" href="<%= root_url %>"><%= image_tag("logo.250.png", :class => "slogo") %></a>
      <p class="menu show-for-small" style=""><a href="#"><i class="icon-reorder"> Menu</i></a></p>
    </div>
  </div>
</div>
<div class="menu-bar">
  <div class="row">
    <div class="twelve columns">
      <nav id="menu" role="navigation" class="top-menu left">
        <ul id="mainNav" class="nav-bar">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Why Simplified?', about_path %></li>
          <li class="has-flyout">
            <% if can? :edit, Message %>
            <%= link_to "Service", messages_url %>
            <% else %>
            <a href="#">Service</a>
            <% end %>
            <a href="#" class="flyout-toggle"><span> </span></a>
            <ul class="flyout">
              <li><%= link_to "Meter Reading", new_meter_path %></li>
              <li><%= link_to "Service Call", new_service_call_path %></li>
              <li><%= link_to "Supply Order", new_supply_order_path %></li>
            </ul>
          </li>
          <li class="has-flyout">
            <%= link_to "Products", products_url %>
            <a href="#" class="flyout-toggle"><span> </span></a>
            <ul class="flyout accordion">
              <% for category in @categories %>
              <li>
                <div class="title">
                  <h6><%= category.name %></h6>
                </div>
                <div class="content">
                  <ul>
                    <% for product in category.products.order(:name) %>
                    <li>
                      <%=link_to product.name, product %>
                      <p class='subheader'><%= product.excerpt %></p>
                    </li>

                    <% end %>
                    <li><%= link_to "View All #{category.name}", category %></li>
                  </ul>
                </div>
              </li>
              <% end %>
              <li style="color:black;">
                <h5><%= link_to "View All Products", products_url %></h5>
              </li>
            </ul>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>