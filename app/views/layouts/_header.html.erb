<div class="rbar-container <% if user_signed_in?%> in<% end %>">
  <div class="row rbar">
    <div class="twelve columns">
      <div class="top twelve">
        <ul class="top right<% if user_signed_in?%> in<% end %>">
          <% if user_signed_in? %>
          <li class="user">Signed in as: <%= link_to current_user.email, current_user %></li>
          <li ><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :confirm => 'Are you sure?' %></li>
          <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <% end %>
        </ul> 
      </div>
      <a href="<%= root_url %>"><%= image_tag("logo.250.png", :class => "slogo") %></a>
      <p class="menu show-for-small" style=""><a href="#"><i class="icon-reorder"> Menu</i></a></p>
    </div>
  </div>
</div>
</div>
<div class="menu-bar">
  <div class="row">
    <div class="twelve columns">
      <nav id="menu" role="navigation" class="top-menu left">
        <ul id="mainNav" class="nav-bar">
          <li><%= link_to 'Home', root_path %></li>
          <li class="has-flyout">
            <a href="#">Customer Service</a>
            <a href="#" class="flyout-toggle"><span> </span></a>
            <ul class="flyout">
              <li><h4><%= link_to "<i class='general foundicon-graph'></i> Meter Reading".html_safe, new_meter_path %></h4></li>
              <li><h4><%= link_to "<i class='general foundicon-tools'></i> Service Call".html_safe, new_service_call_path %></h4></li>
              <li><h4><%= link_to "<i class='general foundicon-cart'></i> Supply Order".html_safe, new_supply_order_path %></h4></li>
            </ul>
          </li>
          <li class="has-flyout">
            <%= link_to "Products", products_url %>
            <a href="#" class="flyout-toggle"><span> </span></a>
            <ul class="flyout accordion">
              <% for category in @categories %>
              <li>
                <div class="title">
                  <h4><%= category.name %></h4>
                </div>
                <div class="content">
                  <ul>
                    <% for product in category.products.order(:name) %>
                    <li>
                      <h5><%=link_to product.name, product %></h5>
                      <p class='subheader'><%= product.excerpt %></p>
                    </li>

                    <% end %>
                    <li><h5><%= link_to "View All #{category.name}", category %></h5></li>
                  </ul>
                </div>
              </li>
              <% end %>
              <li style="color:black;">
                <h4><%= link_to "View All Products", products_url %></h4>
              </li>
            </ul>
          </li>
          <% if can? :edit, Product %><li><%= link_to "Admin", admin_index_url %></li><% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>