<% provide(:title, 'Home') %>

<div class="row">
	<div class="twelve columns">
		<h1>Welcome to Simplified Office Solutions!</h1>
	</div>
</div>

<div class="row box">
	<div class="three columns">
      <dl>
        <dt><h3>Expert Customer Service</h3></dt>
        <dd><p class="subheader">We believe that great customer service starts with communication and we've made a few easy ways to contact us. Let us know if you need to place a service call, supply order or submit a meter reading right from our site. Or leave us any other comments at the bottom of the page.</p></dd>
      </dl>
	</div>
	<div class="nine columns serv-row">
		<div class="four columns serv-col meterreading">
			<%= link_to "<i class='general foundicon-graph'></i><br><p>Submit a Meter Reading</p>".html_safe, new_meter_path, :class => 'service-button' %>
		</div>
		<div class="four columns serv-col servicecall">
			<%= link_to "<i class='general foundicon-tools'></i><br><p>Place a Service Call</p>".html_safe, new_service_call_path, :class => 'service-button' %>
		</div>
		<div class="four columns serv-col supplyorder">
			<%= link_to "<i class='general foundicon-cart'></i><br><p>Place a Supply Order</p>".html_safe, new_supply_order_path, :class => 'service-button' %>
		</div>
	</div>
</div>
<div class="row">
	<div class="twelve columns">
		<h2>Featured at Simplified:</h2>
	</div>
</div>
<div class="row box">
	<div class="seven columns">
		<h3>Photos from our Demoroom:</h3>
		<div id="featured">
			<img src="/assets/featured/1.jpg">
			<img src="/assets/featured/2.jpg">
			<img src="/assets/featured/3.jpg">
			<img src="/assets/featured/4.jpg">
		</div>
	</div>
	<div class="five columns" style="border-left:#333 dotted thin;">
		<h3>Used and Refurbished Stock:</h3>
		<% 5.times do |i| %>
		<h3>Featured Item <%= i %></h3>
		<h5 class="subheader">Featured Item <%= i %> is just so cool and stuff...</h5>
		<% end %>
	</div>
</div>
