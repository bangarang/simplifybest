<% provide(:title, 'Copiers and Printers in Omaha') %>

<div class="loupeandbell">
	<div class="homephrase">
		<div class="row">
			<div class="large-9 columns">
				<h2 class="tagline subheader">Great products backed by the best support in the Omaha area.</h2>
			</div>
			<div class="large-3 columns">
				<a class="button success" href="/getaquote"><h2 class="Quote subheader">Get a Quote</h2></a>
			</div>
		</div>
	</div>
</div>

<section class="featured">
	<div class="row">
		<div class="large-12 columns">
			<h2 class="title">Featured Products</h2>
		</div>
		<div class="large-12 columns">
		    <ul class="large-block-grid-4 small-block-grid-2">
		      <% for product in @featured_products %>
				<%= render 'products/product', product: product %>
		      <% end %>
		    </ul>
		</div>
	</div>
</section>

<section class="manufacturers">
	<div class="row">
		<h2 class="title">Our Partners</h2>
		<h3 class="subheader">We've partnered with the best manufacturers in the world to deliver you great office machines.</h3>
	</div>
	<% for brand in @brands %>
	<div class="row partner">
		<div class="large-5 columns">
			<%= image_tag brand.image_url(:main).to_s %>
		</div>
		<div class="large-7 columns">
			<%= brand.description.html_safe %>
			<h3><%= link_to "Check out all of our #{brand.name} Products", brand %></h3>
		</div>
	</div>
	<% end %>
</section>

<section class="newsletter">
  <div class="row">
    <div class="large-7 columns">
      <p class="comment subheader">Sign up for our Monthly Specials!</p>
    </div>
    <div class="large-5 columns">
		<form action="http://simplifybest.us7.list-manage.com/subscribe/post?u=0520304538750e6d8a5e796e0&amp;id=df6de47979" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
			<div class="row collapse">
				<div class="large-9 small-8 columns">
					<input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="me@example.com" required>
				</div>
				<div class="large-3 small-4 columns">
					<button type="submit" class="small button expand" value="Subscribe" name="subscribe" id="mc-embedded-subscribe">Subscribe</button>
				</div>
			</div>
		</form>
  </div>
</section>

<%= javascript_tag do %>
	mixpanel.track('Home Page');
<% end %>