<% provide(:title, "All Messages") %>

<div class="box">
  <div class="row">
    <div class="twelve columns">
      <ul class="block-grid four-up mobile index">
        <% for message in @messages %>
        <li>
          <a href="<%= message_path(message) %>">
            <ul class="pricing-table box message">
              <% if message.service? %>
              <li class="ticket <%= message.type %>">Service Call</li>
              <% end %>
              <% if message.supply? %>
              <li class="ticket <%= message.type %>">Supply Order</li>
              <% end %>
              <% if message.meter? %>
              <li class="ticket <%= message.type %>">Meter Reading</li>
              <% end %>
              <li class="bullet-item"><%= message.first %> <%= message.last %></li>
              <li class="bullet-item"><%= message.company %></li>
              <li class="bullet-item"><%= message.address %></li>
              <li class="bullet-item"><%= message.sos %></li>
              <% if message.meter? %>
              <li class="bullet-item"><%= message.meter %></li>
              <% else %>
              <li class="description"><%= message.comment %></li>
              <% end %>
              <li class="cta-button"><%= link_to "Destroy", message, :confirm => 'Are you sure?', :method => :delete, :class => "small button" %></li>
            </ul>
          </a>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row" style="padding:20px 0;">
    <div class="four columns">
      <%= link_to "Meter Reading", new_meter_path, :class => "small button" %>
    </div>
    <div class="four columns">
      <%= link_to "Service Call", new_service_call_path, :class => "small button" %>
    </div>
    <div class="four columns">
      <%= link_to "Supply Order", new_supply_order_path, :class => "small button" %>
    </div>
  </div>
</div>
