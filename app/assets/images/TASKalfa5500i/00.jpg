OUT_DIR=out
PAD_LENGTH=2

   # testing output directory exist. if not create it.

   COUNTER='0'
   EXT=jpg
   
   for file in * ; do
      OUTFILE=$(printf "%0${PAD_LENGTH}i\n" "${COUNTER}")
      cp -v "$file" "${OUTFILE}.${EXT}";
      let COUNTER++;
   done
