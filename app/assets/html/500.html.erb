	  	<!-- FOOTER -->
	  	</div>
		<div class="prod-footer">
		  <div class="row">
		    <div class="three columns hide-for-small">
		      <h4 class="subheader">Products Types</h4>
		      <ul>
		        <% for category in @categories %>
		        <li><%= link_to category.name, category %></li>
		        <% end %>
		        <li><%= link_to "View All", products_url %></li>
		      </ul>
		    </div>
		    <div class="three columns hide-for-small">
		      <h4 class="subheader">Customer Service</h4>
		      <ul>
		        <li><%= link_to "Meter Reading", new_meter_path %></li>
		        <li><%= link_to "Service Call", new_service_call_path %></li>
		        <li><%= link_to "Supply Order", new_supply_order_path %></li>
		      </ul>
		    </div>
		    <div class="three columns">
		      <h4 class="subheader">Contact Us</h4>
		      <dl>
		        <dt>Address</dt>
		        <dd>6630 South 118th Street<br >Omaha, NE 68137</dd>
		        <dt>Phone Number</dt>
		        <dd>Local: (402) 935-7936</dd> 
		        <dd>Toll-Free: 1 (877) 677-6482 </dd>
		      </dl>
		    </div>
