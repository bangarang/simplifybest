		            <li class="has-flyout right">
		              <h4 class="menu-links"><a href="#">Account</a></h4>
		              <a href="#" class="flyout-toggle"><span> </span></a>
		              <ul class="flyout right">
		                <li class="user"><h5><%= link_to "User Profile", current_user %></h5></li>
		                <li ><h5><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :confirm => 'Are you sure?' %></h5></li>
		                <% if can? :edit, Product %><li><h5><%= link_to "Admin", admin_index_url %></h5></li><% end %>
		              </ul>
		            </li>
		            <% else %>
		            <% end %>
